                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="...">
                                                    <button  class="btn btn-primary btn-sm" id="<%= Material.id %>"
                                                        onclick="Updatevalue('<%= Material.id %>')" style="margin:10px;"
                                                        type="button">Update Material</button>
                                                </div>
                                            </div>
                                    </div>
                                    </div>
                                </div>
                                    <% } %>
                                        <% }) %>
                
                                
                                <% } %>
                                    <!-- Dashboard Content End -->
                                    <script>
                                        // Change user Role
                                        document.getElementById("userRole").innerHTML = "<%= userRole %>"
                                        // Add Sidebar to Page
                                        $("#sidebar").addClass("with-sidebar")

                                        function deleteMaterial(id) {
                                            const response = confirm("Are you sure, Once deleted it can not be retrive again")
                                            if (response) {
                                                $.get(`/deleteMaterial/${id}`, (data, status) => {
                                                    if (status === 'success') {
                                                        $(`#${id}`).remove();
                                                        toastAlert("Success", "Material deleted!","alert-success");
                                                    }
                                                });
                                            }
                                        }

                                        function Updatevalue(id) {
                                            const Material_id = parseInt(id);
                                            $.get(`/getAMaterial/${Material_id}`, (data, status)=>{
                                                halfmoon.toggleModal('modal-3');
                                                $('#modal-3 #Material_id').val(data[0]);
                                                $('#modal-3 #name').val(data[1]);
                                                $('#modal-3 #cost').val(data[3]);
                                            })
                                        }
                                    </script>